    "tslint-config-prettier": "1.16.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-no-circular-imports": "0.6.1",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-consistent-codestyle": "1.15.0",
    "tslint-react": "3.6.0",
    "tsutils": "3.5.2"
  },
  "peerDependencies": {
    "prettier": "^1.16.3",
    "tslint": "5.12.0",
    "typescript": "^3.2.0"
  },
  "devDependencies": {
    "prettier": "1.16.3",
    "typescript": "3.3.1"
  },
  "types": "lib/index.d.ts"
